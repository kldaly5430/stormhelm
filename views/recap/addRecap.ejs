<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%- include('../partials/head'); -%>
        <header>
            <%- include('../partials/navigation'); -%>
        </header>
    </head>
    <body>
        <%- include('../partials/messages'); -%>
        
        <div class="container">
            <h1>New Recap</h1>
            <form action="/recap/add" method="POST" name="addRecap">
                <div class="row">
                    <div class="col-md-6">
                        <label for="title">Title: </label>
                        <input type="text" name="title" id="inputTitle" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label name="date">Date: </label>
                        <input type="date" name="date" id="inputDate" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label for="recap">Recap: </label>
                        <textarea name="recap" id="txtRecap" rows="10" class="form-control"></textarea>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-md-12">
                        <button type="submit" class="float-right btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>